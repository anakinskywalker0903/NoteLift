{
  "manifest_version": 3,
  "name": "NoteLift",
  "description": "Extract highlighted text into module-wise revision notes",
  "version": "0.2",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "contextMenus",
    "storage",
    "clipboardRead"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
