{
  "manifest_version": 3,
  "name": "NoteLift",
  "description": "Extract highlighted text from PDFs into clean revision notes",
  "version": "0.1",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["scripting", "activeTab", "contextMenus", "storage"],
  "background": {
    "service_worker": "background.js"
  }
}
