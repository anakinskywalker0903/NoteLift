{
  "manifest_version": 3,
  "name": "NoteLift",
  "description": "Extract highlighted text into module-wise revision notes",
  "version": "0.2",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
  "16": "icons/icon16.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
},
  "permissions": [
    "scripting",
    "activeTab",
    "contextMenus",
    "storage",
    "clipboardRead",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
